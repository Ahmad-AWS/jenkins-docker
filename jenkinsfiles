pipeline {
    agent {
        docker {
            image 'python:3.9' // Use a Python Docker image
        }
    }
    stages {
        stage('Checkout') {
            steps {
                script {
                    checkout scm
                }
            }
        }
        stage('Install Dependencies') {
            steps {
                echo "In installation phase"
                #sh 'pip install -r requirements.txt'
            }
        }
        stage('Run Tests') {
            steps {
                echo "In Testing phase"
                #sh 'python -m unittest discover'
            }
        }
    }
}
